{
  "compilerOptions": {
    "target": "es5",
    "pretty": true,
    "noEmit": true,
    "sourceMap": true,
    "allowJs": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "lib": ["es2015"],
    "baseUrl": "src",
    "paths": {
      "com.batch.dom/*": ["lib/dom/*"],
      "com.batch.shared/*": ["lib/shared/*"],
      "com.batch.translations/*": ["translations/*"],
      "com.batch.worker/*": ["lib/worker/*"]
    }
  }
}
